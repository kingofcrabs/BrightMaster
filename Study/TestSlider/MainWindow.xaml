<Window x:Class="TestSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local ="clr-namespace:ExtControls"
        Title="MainWindow" Height="550" Width="525">
    <Grid>
        <StackPanel Margin="100,10,10,20" Width="150">

            <local:DiscreteSlider Grid.Column="0" x:Name="discreteSlider1" 
                                PropertyChanged="discreteSlider1_ValueChanged"></local:DiscreteSlider>
            <TextBlock Margin="0,20,0,0" Name="slider1Text" Grid.Column="0" Grid.Row="1">New Value:</TextBlock>
        </StackPanel>
    </Grid>
</Window>
